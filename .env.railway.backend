# Railway Environment Variables - Backend

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/shaxe_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shaxe_db
DB_USER=shaxe_user
DB_PASSWORD=your_secure_password

# Server Configuration
NODE_ENV=production
PORT=5000
API_URL=https://your-railway-backend-url.railway.app

# Frontend Configuration
FRONTEND_URL=https://your-railway-frontend-url.railway.app

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRE=30d

# KYC Configuration (Mock)
KYC_PROVIDER=mock
# For real KYC provider later:
# KYC_PROVIDER=jumio
# JUMIO_API_KEY=your_jumio_api_key
# JUMIO_API_SECRET=your_jumio_secret

# File Upload (if using cloud storage)
UPLOAD_PROVIDER=local
# UPLOAD_PROVIDER=aws_s3
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=shaxe-uploads

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://your-railway-frontend-url.railway.app
